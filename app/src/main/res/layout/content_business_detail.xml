<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.micahherrera.munch.businessdetail.BusinessDetailActivity"
    tools:showIn="@layout/activity_business_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/business_detail_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="date date"
            />

        <TextView
            android:id="@+id/business_detail_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="date date"
            />

        <TextView
            android:id="@+id/business_detail_hours"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Header"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="26sp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/business_detail_recycler"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
